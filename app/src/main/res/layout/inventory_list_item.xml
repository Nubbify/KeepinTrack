<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp">

    <TextView
        android:id="@+id/tv_item_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/tv_item_quantity"
        android:text="Item"
        android:textSize="24sp"
        android:textAlignment="gravity"
        android:gravity="center_vertical"
        />

    <TextView
        android:id="@+id/tv_item_quantity"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/tv_item_price"
        android:text="###"
        android:textAlignment="center"
        android:textSize="18sp" />


    <TextView
        android:id="@+id/tv_item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="6dp"
        android:layout_toStartOf="@+id/btn_item_sale"
        android:text="$1999.99"
        android:textAlignment="center"
        android:textSize="18sp" />

    <Button
        android:id="@+id/btn_item_sale"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@color/colorAccent"
        android:padding="12dp"
        android:text="Sale"
        android:textSize="24sp"
        />

    <!-- This view divides list items -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#dadada"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>